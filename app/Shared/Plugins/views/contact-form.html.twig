<section id="contact" class="bg-white dark:bg-gray-800 dark:border-gray-600 shadow-md dark:bg-gray-900 px-4 py-16 flex items-center rounded-2xl justify-center min-h-screen">
	<div class="container px-5 py-24 mx-auto gap-6  flex sm:flex-nowrap flex-wrap">
		<div class="lg:w-2/3 md:w-1/2 bg-blue-300 rounded-lg overflow-hidden sm:mr-10 p-10 flex items-end justify-start relative">
			{% if hook.field.show_map_iframe %}
				<iframe width="100%" height="100%" class="absolute inset-0" frameborder="0" title="map" marginheight="0" marginwidth="0" scrolling="no" src="{{hook.field.map_url|raw}}" style="filter: grayscale(0) contrast(1.2) opacity(0.6);"></iframe>
			{% endif %}
			<div class="bg-white dark:bg-gray-800 dark:border-gray-600 dark:bg-gray-900 relative h-48 flex flex-wrap py-6 rounded-2xl shadow-md">
				<div class="lg:w-1/2 px-6">
					{% if hook.field.address %}
						<h2 class="font-bold text-gray-dark">{{lang.translate('ADDRESS')}}</h2>
						<p class="mt-1">{{hook.field.address}}</p>
					{% endif %}
				</div>
				<div class="lg:w-1/2 px-6 mt-4 lg:mt-0">
					{% if hook.field.email %}
						<h2 class="font-bold text-gray-dark">{{lang.translate('EMAIL')}}</h2>
						<a href="mailto:{{hook.field.email}}" class="text-primary leading-relaxed">{{hook.field.email}}</a>
					{% endif %}
					{% if hook.field.phone %}
						<h2 class="font-bold text-gray-dark mt-4">{{lang.translate('PHONE')}}</h2>
						<a href="tel:{{hook.field.phone}}" class="leading-relaxed">{{hook.field.phone}}</a>
					{% endif %}
				</div>
			</div>
		</div>

		<form action="/front_api/create" id="contact-form" class="ajax-form lg:w-1/3 md:w-1/2  flex flex-col md:ml-auto w-full md:py-8 mt-8 md:mt-0">
			<input type="hidden" name="type" value="ContactForm.create"/>
			<h2 class="text-primary text-lg mb-2 font-medium">Get in Touch</h2>
			<p class="mb-5 text-gray-txt">{{hook.field.form_text}}
			</p>
		</p>
		{% if hook.field.show_name %}
			<div class="relative mb-4">
				<label for="name" class="leading-7 text-sm text-gray-dark">Name</label>
				<input type="text" id="name" name="params[name]" class="w-full bg-white dark:bg-gray-800 dark:border-gray-600 rounded-2xl border border-gray-txt  text-base outline-none text-gray-txt py-1 px-3 leading-8">
			</div>
		{% endif %}
		{% if hook.field.show_phone %}
			<div class="relative mb-4">
				<label for="phone" class="leading-7 text-sm text-gray-dark">Phone</label>
				<input type="text" id="phone" name="params[phone]" class="w-full bg-white dark:bg-gray-800 dark:border-gray-600 rounded-2xl border border-gray-txt  text-base outline-none text-gray-txt py-1 px-3 leading-8">
			</div>
		{% endif %}
		{% if hook.field.show_email %}
			<div class="relative mb-4">
				<label for="email" class="leading-7 text-sm text-gray-dark">Email</label>
				<input type="email" id="email" name="params[email]" class="w-full bg-white dark:bg-gray-800 dark:border-gray-600 rounded-2xl border border-gray-txt text-base outline-none text-gray-txt py-1 px-3 leading-8">
			</div>
		{% endif %}
		{% if hook.field.show_message %}
			<div class="relative mb-4">
				<label for="message" class="leading-7 text-sm text-gray-dark">Message</label>
				<textarea id="message" name="params[message]" class="w-full bg-white dark:bg-gray-800 dark:border-gray-600 rounded-2xl border border-gray-txt  h-32 text-base outline-none text-gray-txt py-1 px-3 resize-none"></textarea>
			</div>
		{% endif %}

		<button type="submit" class="mx-auto mt-2 group relative h-12 w-48 overflow-hidden rounded-lg bg-white dark:bg-gray-800 dark:border-gray-600  dark:border-gray-700 dark:bg-gray-800 dark:border-gray-600 text-lg shadow">
			<div class="absolute inset-0 w-3 bg-purple-800 transition-all duration-[250ms] ease-out group-hover:w-full"></div>
			<span class="relative text-black group-hover:text-white">{{lang.translate('Send')}}</span>
		</button>
	</form>
</div></section>

