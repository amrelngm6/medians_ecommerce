{% include 'views/front/' ~ template ~ '/includes/head.html.twig' %}

<div class=" w-full">

    <div class="w-full flex gap gap-2" id="main-container">
        
        <div  class="lg:fixed bg-white dark:bg-gray-900 h-screen">
            {% include 'views/front/' ~ template ~ '/includes/app_sidebar.html.twig' %}
        </div>

        
        <div class="w-full px-2 lg:px-0 relative overflow-hidden lg:ml-60" >
                    
            <header >
                {% include 'views/front/' ~ template ~ '/includes/app_header.html.twig' %}
            </header>

            <div class="py-4  h-full overflow-hidden rounded-2xl">                     
                    
                <div class="w-full  ">
                    <div class=" p-8 relative " >
                        <div class="artist-overlay top-[-20px] left-0 absolute w-full h-full py-20 bg-gradient-to-b from-gray-800 to-black"></div>
                        <img src="{{item.picture}}"  class="absolute bg-img left-20px top-0 w-full" />
                        <div class="flex w-full text-white mx-auto text-center relative z-10">
                            <img src="{{item.picture}}"  class="w-40 h-40 lg:w-56 lg:h-56 rounded-full shadow-xl" />
                            <div class="p-8 text-left w-full">
                                <span>{{Track}}</span>
                                <h1 class="lg:text-2xl text-lg ">{{item.name}}</h1>
                                <div class="py-2 font-thin">
                                    <p class="truncate-text truncate">{{item.description}} </p>
                                </div>
                                <div class="flex gap-4 py-2">
                                    <span class="text-sm text-gray-100">{{lang.translate('Likes')}} : {{item.likes_count}}</span>
                                    <span class="text-sm text-gray-100">{{lang.translate('Plays')}} : {{item.plays_count}}</span>
                                    <span class="cursor-pointer mx-2 text-sm text-gray-100"><img src="/src/front_assets/svg/white-heart.svg" class="w-5"></span>
                                    <span class="cursor-pointer mx-2 text-gray-100 leading-3 text-xl font-extrabold" >...</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>  
                <div class="relative z-10 w-full  gap-4 bg-white dark:bg-gray-900 rounded-2xl p-8 h-full">
                    
                    <div class="w-full ">
                        {% include 'views/front/'~app.SystemSetting.template ~'/single-player.html.twig' %}        
                    </div>
                    <span class="block pt-10 text-sm text-gray-500">{{lang.translate('Description')}}</span>
                    <div class="text-primary">
                        <p class="dark:text-gray-400 py-4">{{item.description}}</p>
                    </div>
                    <div class="w-full 	py-10" id="top-followers">
                        <div class=" w-full flex gap-4 text-primary">
                            <div class=" w-full flex gap-4 dark:text-gray-400 ">
                                <h2 class="text-2xl  font-semibold">Fans who liked</h3>
                                <a href="#!" class="p-2 hover:text-orange-500">See all</a>
                            </div>
                            
                            <div class="flex gap gap-4">
                                <button class="prev-btn" data-slider="top-authors"><img class="w-8" src="/src/front_assets/svg/left.svg"></button>
                                <button class="next-btn" data-slider="top-authors"><img class="w-8" src="/src/front_assets/svg/right.svg"></button>
                            </div>
                        </div>
                        <div class="my-4 " ></div>
                        <div id="top-authors" class="carousel-container" data-count="5"></div>

                    </div>

                    

                    <div class="w-full 	my-10 relative text-primary " id="latest-uploads">
                        <h2 class="text-2xl font-semibold dark:text-gray-400">Fans also played</h3>
                        <div class="my-4 " ></div>
                        <div id="tracks-list" class=" overflow-auto max-h-80 "></div>
                        <div class="my-10 " ></div>
                        <div class="z-10 absolute bottom-0 bg-gradient-to-b from-transparent dark:to-gray-900 to-white w-full h-20"></div>
                    </div>

                </div>

            </div>
        </div>

    </div>
</div>
    
        
<!-- Footer -->
{% include 'views/front/' ~ template ~ '/includes/footer.html.twig' %}

<script src="/src/front_assets/js/main.js"></script>

</body>

</html>