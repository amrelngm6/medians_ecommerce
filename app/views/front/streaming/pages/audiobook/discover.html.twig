<div class="py-4 px-2 w-full">

	{% include 'views/front/' ~ template ~ '/includes/book_genres_section.html.twig' %}


	<div class="w-full lg:flex gap-6 dark:bg-gray-900 bg-white   p-8 rounded-lg shadow shadow-lg relative">

		<div class="min-w-56  z-10 relative" id="filter-parent">
			{% include 'views/front/' ~ template ~ '/includes/book-filter-sidebar.html.twig' %}
		</div>
		<div class="w-full relative  rounded-lg shadow-md  ">
			<div class="w-full text-primary border-1 p-8">
				<div class="w-full dark:text-gray-400 text-xl font-bold tracking-wide">
					{{lang.translate('Explore what is trending')}}</div>
			</div>
			<hr class="opacity-30"/>
			<div class="w-full p-8">
				<div class="w-full flex">
					<div class="w-full ">
						<ul class="w-full grid-cols-2 grid gap-10 pb-20">
							{% for audiobook in list.items %}
								<div class="pCard_card" id="audiobook-card-{{loop.index}}">

									<div class="pCard_up" style=" background-image: url(/stream?thumbnail=400&image={{audiobook.picture_name}}); ">
										<div class="pCard_text">
											<h2>{{audiobook.name}}</h2>
											<p class="truncate w-full px-2">{{audiobook.description}}</p>
										</div>
										<div class="pCard_add" data-id="audiobook-card-{{loop.index}}"><img src="/src/front_assets/svg/playlist.svg" class=" relative top-2 pt-1 left-0 right-0 mx-auto" width="40"></div>
									</div>

									<div class="pCard_down">
										<div>
											<p>{{('Chapters')}}</p>
											<p>{{audiobook.files|length}}</p>
										</div>
										<div>
											<p>{{lang.translate('Views')}}</p>
											<p>{{audiobook.views|length}}</p>
										</div>
										<div>
											<p>{{lang.translate('Likes')}}</p>
											<p>{{audiobook.likes_count}}</p>
										</div>
									</div>

									<div class="pCard_back">
                                        <ul class="pb-10 overflow-auto " style="max-height:325px">
                                        {% for file in audiobook.files %}
                                        {% include 'views/front/' ~ template ~ '/includes/audiobook-list.html.twig' %}
                                        {% endfor %}
                                        </ul>
									</div>

								</div>

							{% endfor %}
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="h-10"></div>
</div>
