<div class="py-4 px-2 w-full dark:bg-gray-900 bg-white   p-8 rounded-lg shadow shadow-lg relative">

    <div class="w-full text-primary border-1 py-4 px-8">
        <div class="w-full dark:text-gray-400 text-xl font-bold tracking-wide">{{item.lang_content.title}}</div>
    </div>
	<div class="w-full lg:flex gap-6 p-8">

		<div class="min-w-56  z-10 relative" id="filter-parent">
			{% include 'views/front/' ~ template ~ '/includes/book-filter-sidebar.html.twig' %}
		</div>
		<div class="w-full relative  rounded-lg shadow-md  ">
			<div class="w-full p-8">
				<div class="w-full flex">
					<div class="w-full ">
						<ul class="w-full grid-cols-2 grid gap-10 pb-20">
							{% for audiobook in list.items %}
								<div class="pCard_card" id="audiobook-card-{{loop.index}}">

									<div class="pCard_up" style=" background-image: url(/stream?thumbnail=400&image={{audiobook.picture_name}}); ">
										<div class="pCard_text">
											<h2>{{audiobook.name}}</h2>
											<p class="truncate w-full px-2">{{audiobook.description}}</p>
										</div>
										<div class="pCard_add" data-id="audiobook-card-{{loop.index}}"><img src="/src/front_assets/svg/playlist.svg" class=" relative top-2 pt-1 left-0 right-0 mx-auto" width="40"></div>
									</div>

									<div class="pCard_down">
										<div>
											<p>{{('Chapters')}}</p>
											<p>{{audiobook.files|length}}</p>
										</div>
										<div>
											<p>Views</p>
											<p>{{audiobook.views_count}}</p>
										</div>
										<div>
											<p>Likes</p>
											<p>{{audiobook.likes_count}}</p>
										</div>
									</div>

									<div class="pCard_back">
                                        <ul class="pb-10 overflow-auto " style="max-height:325px">
                                        {% for file in audiobook.files %}
                                        {% include 'views/front/' ~ template ~ '/includes/audiobook-list.html.twig' %}
                                        {% endfor %}
                                        </ul>
									</div>

								</div>

							{% endfor %}
						</ul>
					</div>
				</div>

                {% set c = list.count - (app.SystemSetting.category_products_count * app.params.page) %}
                {% if c > 0 %}
                <a href="?params[page]={{app.params.page ? (app.params.page + 1) : 2}}&params[sort_by]={{app.params.sort_by}}&params[date]={{app.params.date}}" class="ajax-load float-right dark:text-gray-400 mx-auto inline-block px-6 py-2 rounded-2xl border transition hover:border-orange-600 border-orange-300">{{lang.translate('Next')}}</a>
                {% endif %}
                {% if app.params.page > 1 %}
				<a href="?params[page]={{(app.params.page - 1)}}&params[sort_by]={{app.params.sort_by}}&params[date]={{app.params.date}}" class="ajax-load float-left dark:text-gray-400 mx-auto inline-block px-6 py-2 rounded-2xl border transition hover:border-orange-600 border-orange-300">{{lang.translate('Previous')}}</a>
                {% endif %}

			</div>
		</div>
	</div>
	<div class="h-10"></div>
</div>
