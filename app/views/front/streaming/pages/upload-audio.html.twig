
            <form action="/front_api/create" method="post" enctype="multipart/form-data" id="upload-step" class="ajax-form relative text-primary  w-full  rounded-2xl bg-white dark:bg-gray-900  p-8 pb-20">
                <div class="loader absolute w-full h-full left-0 top-0 bg-white opacity-50 dark:bg-gray-900   z-10"></div>
                <input type="hidden" name="type" value="MediaItem.upload" />
                <input type="hidden" name="params[type]" value="{{type}}" />
                <h2 class="text-2xl dark:text-gray-400 ">{{lang.translate('Upload Music')}}</h2>
                
                <div class="flex my-4 py-6 relative" id="upload-media-form">
