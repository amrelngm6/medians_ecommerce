<div class=" w-full  lg:h-screen gradient-top-overlay" style="min-height: 300px; max-height: calc(100vh - 70px)">


	<figure id="videoContainer" class="w-full  shadow-xl absolute top-0 left-0 ">
		<video id="my-video" data-container="videoContainer" class="w-full h-screen" autoplay poster="/stream?thumbnail=1000&dir=videos/screenshots&image={{item.picture_name}}" crossorigin="anonymous">
			<source src="/stream_short_video?video={{item.main_file.filename}}" type="video/webm"/>
		</video>

		<div id="video-controls" class="flex px-6 gap-4 text-gray-400 absolute bottom-0 left-0 w-full gradient-top-overlay pt-10" data-state="hidden">
			<button class="play-video brightness-200" data-player="my-video" id="play" type="button" data-state="play"><img src="/src/front_assets/svg/video-play.svg" class="w-4 brightness-200"/></button>
			<button class="pause-video brightness-200" data-player="my-video" style="display:none" id="pause" type="button" data-state="pause"><img src="/src/front_assets/svg/video-pause.svg" class="w-4 brightness-200"/></button>
			<div id="current-time-page"></div>
			<div class="progress w-full">
				<progress id="progress" data-player="my-video" class="cursor-pointer bg-gray-800 w-full rounded-2xl overflow-hidden " value="0" min="0" step="1" max="">
					<span id="progress-bar"></span>
				</progress>
			</div>
			<span id="video-duration-page"></span>
			<div class="volume relative show-child ">
				<button class="brightness-200" id="mute" data-player="my-video" type="button" style="padding-top: 5px" data-state="mute"><img src="/src/front_assets/svg/video-volume.svg" class="w-4 brightness-200"/></button>
				<input type="range" id="video-volume" data-player="my-video" min="0" step=".1" max="1" class="show-on-hover absolute bottom-0 h-2 left-1 w-20" style="transform-origin: left; transform: rotate(270deg);"/>
			</div>
			<button id="fs" class="fullscreen " data-container="videoContainer" data-player="my-video" id="pause" type="button" data-state="go-fullscreen"><img src="/src/front_assets/svg/fullscreen.svg" class="w-4 brightness-200"/></button>
		</div>
	</figure>

</div>
<div class=" w-full h-40 absolute top-0 left-0 gradient-overlay" style="z-index:1; "></div>

{% set customer = app.customer_auth() %}
<div class=" w-full  relative" id="video-overlay">
	<div class="absolute lg:bottom-20 lg:left-40 left-10 bottom-10  z-10 w-2/3 text-gray-100 dark:text-gray-400">
		<h1 class="lg:text-4xl text-2xl text-white overflow-hidden">{{item.name}}</h1>

		{% if item.customer_id == customer.customer_id %}
			<div class="{{ following == null ? '' : ' hidden'}} float-right" x-on:click="jQuery('#heart-{{item.customer_id}}').addClass('hidden'); jQuery('#unheart-{{item.customer_id}}').removeClass('hidden')" id="heart-{{item.customer_id}}">
				<a href="/studio" class="ajax-load hover:border-orange-300 hover:text-orange-300 border  border border-4 border-white rounded-full py-2 px-6">
					<span>{{lang.translate('Edit')}}</span>
				</a>
			</div>
		{% endif %}

		<div class="w-full flex gap-4 py-4">
			{% set liked = item.liked(customer.customer_id).count() %}
			<div class="text-sm text-gray-100 flex gap-">
				<a href="/front_api/create?type=Like.media&params[item_id]={{item.media_id}}" data-params="{item_id: {{item.media_id}} }" class="ajax-link cursor-pointer mx-2 text-sm text-gray-100  flex">
					<img class="{{ liked == null ? 'hidden' : ''}} w-5" x-on:click="jQuery('#heart-{{item.media_id}}').addClass('hidden'); jQuery('#unheart-{{item.media_id}}').removeClass('hidden'); jQuery('#likes-count').text(parseInt(jQuery('#likes-count').text()) + 1);" id="heart-{{item.media_id}}" src="/src/front_assets/svg/blank-heart.svg">
					<img class="{{ liked == null ? '' : 'hidden'}} w-5" x-on:click="jQuery('#unheart-{{item.media_id}}').addClass('hidden'); jQuery('#heart-{{item.media_id}}').removeClass('hidden')" id="unheart-{{item.media_id}}" src="/src/front_assets/svg/white-heart.svg">
				</a>
				<span id="likes-count">{{item.likescount()}}</span>
			</div>
			
			<span class=" cursor-pointer text-sm text-gray-100 flex gap-2 ">
				<img class="w-5" src="/src/front_assets/svg/{{ app.is_dark ? 'views-white' : 'views'}}.svg" />
				<span id="views-count">{{item.commentscount()}}</span>
			</span>
			<span class=" cursor-pointer text-sm text-gray-100 flex gap-2 ">
				<img class="w-5" src="/src/front_assets/svg/{{ app.is_dark ? 'comments-white' : 'comments'}}.svg" />
				<span id="comments-">{{item.commentscount()}}</span>
			</span>
			<span x-on:click="jQuery('#share-popup').removeClass('hidden')" class="cursor-pointer mx-2 text-sm text-gray-100"><img src="/src/front_assets/svg/share.svg" class="w-5"></span>

		</div>

	</div>
</div>
<div class="pb-4  h-full overflow-hidden rounded-2xl" x-data="{is_slide: 'slide'}">

	<div class="relative z-10 w-full  gap-4 bg-white dark:bg-gray-900 rounded-2xl p-8 h-full">

		<a href="/artist/{{item.artist.customer_id}}" class="ajax-load flex gap-6 text-primary">
			<img src="/stream?thumbnail=100&image={{item.artist.picture_name}}" alt="User Avatar" class="w-10 h-10 rounded-full">
			<div class="text-xl dark:text-gray-300">{{item.artist.name}}
				<p class="text-xs dark:text-gray-400">{{lang.translate('Artist')}}</p>
			</div>
		</a>
		<span class="block pt-10 text-sm text-gray-500">{{lang.translate('About')}}</span>
		<div class="text-primary overflow-auto" style="max-height: 400px;">
			<div class="dark:text-gray-400 py-4">{{item.field.about|raw| nl2br  }}</div>
		</div>

		<div class="max-h-[200px] overflow-auto flex" style="flex-direction: column-reverse;" id="comments-list">
			{% set comments = item.comments %}
			{% include 'views/front/' ~ template ~ '/includes/video-comment-block.html.twig' %}
		</div>
		<label for="chat" class="sr-only">{{lang.translate('Your comment')}}</label>
		<form action="/front_api/create" id="comment-short" class="ajax-form w-full " data-element="comments-list" data-prepend="true">
			<div class="flex items-center py-2 px-3 bg-gray-50 rounded-lg dark:bg-gray-700">
				<input type="hidden" name="type" value="Comment.create"/>
				<input type="hidden" name="params[item_id]" value="{{item.media_id}}"/>
				<input type="hidden" name="params[item_type]" value="{{item.getClassName()}}"/>
				<input type="hidden" name="append" value="true"/>
				<textarea id="chat" name="params[comment]" rows="1" class="block mx-4 p-2.5 w-full text-sm text-gray-900 bg-white rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-800 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Your message..."></textarea>
				<button type="submit" onclick="(function(){  setTimeout(function(){jQuery('#chat').val(''); }, 1000)})()" class="inline-flex justify-center p-2 text-blue-600 rounded-full cursor-pointer hover:bg-blue-100 dark:text-blue-500 dark:hover:bg-gray-600">
					<svg class="w-6 h-6 rotate-90" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
						<path d="M10.894 2.553a1 1 0 00-1.788 0l-7 14a1 1 0 001.169 1.409l5-1.429A1 1 0 009 15.571V11a1 1 0 112 0v4.571a1 1 0 00.725.962l5 1.428a1 1 0 001.17-1.408l-7-14z"></path>
					</svg>
				</button>
			</div>
		</form>
	</div>

</div>

