
            <div class="py-4  h-full overflow-hidden rounded-2xl" x-data="{}">                     
                    
                <div class="my-4 h-full lg:flex overflow-hidden rounded-2xl">                     
                    
                    <div class="overflow-hidden w-96 " id="article-parent">
                        <div class=" p-8 relative overflow-hidden  rounded-2xl  w-80" id="article-side" >
                            <div class="artist-overlay top-[-20px] left-0 absolute w-full h-full py-20 bg-gradient-to-b from-gray-800 to-black"></div>
                            <img src="/stream?thumbnail=800&image={{item.picture_name}}"  class="absolute bg-img left-0 top-0" />
                            <div class=" w-full overflow-hidden rounded-2xl text-white mx-auto text-center relative z-10 ">
                                <img src="/stream?thumbnail=300&image={{item.picture_name}}"  class="w-40 h-40 lg:w-56 lg:h-56 rounded-full shadow-xl" />
                                <div class="p-8 text-left ">
                                    <span>{{lang.translate('Article')}}</span>
                                    <h1 class="lg:text-4xl text-2xl ">{{item.name}}</h1>
                                    
                                    <div class="flex gap-4 py-2">
                                        <span class="text-sm text-gray-100">{{lang.translate('Likes')}} : {{item.likes_count}}</span>
                                        <span class="text-sm text-gray-100">{{lang.translate('Items')}} : {{item.items|length}}</span>
                                    </div>
                                    <hr class="opacity-20 my-2" />
                                    <div class="w-full flex gap-2">
                                    
                                        {% set liked = item.liked(customer.customer_id).count() %}
                                        <div class="text-sm text-gray-100 flex gap-">
                                            <a href="/front_api/create?type=Like.article&params[item_id]={{item.article_id}}" data-params="{item_id: {{item.article_id}} }" class="ajax-link cursor-pointer mx-2 text-sm text-gray-100  flex">
                                                <img class="{{ liked == null ? 'hidden' : ''}} w-5" x-on:click="jQuery('#heart-{{item.article_id}}').addClass('hidden'); jQuery('#unheart-{{item.article_id}}').removeClass('hidden'); jQuery('#likes-count').text(parseInt(jQuery('#likes-count').text()) - 1);" id="heart-{{item.article_id}}" src="/src/front_assets/svg/blank-heart.svg">
                                                <img class="{{ liked == null ? '' : 'hidden'}} w-5" x-on:click="jQuery('#unheart-{{item.article_id}}').addClass('hidden'); jQuery('#heart-{{item.article_id}}').removeClass('hidden'); jQuery('#likes-count').text(parseInt(jQuery('#likes-count').text()) + 1);" id="unheart-{{item.article_id}}" src="/src/front_assets/svg/white-heart.svg">
                                            </a>
                                            <span id="likes-count">{{item.likescount()}}</span>
                                        </div>
                                        
                                        <span class=" cursor-pointer text-sm text-gray-100 flex gap-2 ">
                                            <img class="w-5" src="/src/front_assets/svg/{{ app.is_dark ? 'views-white' : 'views'}}.svg" />
                                            <span id="views-count">{{item.viewscount()}}</span>
                                        </span>
                                        <span class=" cursor-pointer text-sm text-gray-100 flex gap-2 ">
                                            <img class="w-5" src="/src/front_assets/svg/{{ app.is_dark ? 'comments-white' : 'comments'}}.svg" />
                                            <span id="comments-">{{item.commentscount()}}</span>
                                        </span>
                                        <span x-on:click="jQuery('#share-popup').removeClass('hidden')" class="cursor-pointer mx-2 text-sm text-gray-100"><img src="/src/front_assets/svg/share.svg" class="w-5"></span>
                                    </div>
                                </div>
                                
                            </div>
                        </div>
                    </div>  
                    <div class="relative z-10 w-full  gap-4 bg-white dark:bg-gray-900  rounded-2xl p-8 h-full">
                        
                        <div class="w-full 	mb-10 relative text-primary" id="latest-uploads">
                            <h1 class="dark:text-gray-400 text-2xl  ">{{item.lang_content.title}}</h1>
                            <hr class="w-10 my-4 " />
                            <div class="my-10 " ></div>
                            <div class="pb-20 ">
                                {{item.lang_content.content|raw}}
                            </div>
                            <div class="z-10 absolute bottom-0 bg-gradient-to-b from-transparent dark:to-gray-900 to-white w-full h-20"></div>
                        </div>

                    </div>

                </div>
                

            </div>

