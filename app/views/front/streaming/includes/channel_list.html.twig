                        {% for artist in channels %}
                                <div class="slide dark:bg-gray-900 dark:text-gray-400  transition hover:text-orange-500 w-full  relative p-2 py-3 shadow-md rounded-3xl text-center bg-white">
                                    <img class=" rounded-full shadow-md transition hover:shadow-lg  mx-auto " src="/stream?thumbnail=100&image={{artist.picture_name}}" />
                                    <a href="artist.html" class="lg:text-base text-xs block px-1 lg:font-semibold pt-4 pb-1"> {{artist.name}}</a>
                                    <span class="px-1 relative text-gray-500 text-opacity-75 lg:text-sm text-xs font-normal  tracking-tight">{{lang.translate('Followers')}}:  {{artist.followers|length}}</span>
                                    <span class="px-1 relative text-gray-500 text-opacity-75 lg:text-sm text-xs font-normal  tracking-tight">{{lang.translate('Items')}}:  {{artist.audio_items|length}}</span>

                                </div>  
                        {% endfor %}