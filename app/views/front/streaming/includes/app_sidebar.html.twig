                        <li class="w-full   " id="likes">
                            <a title="{{lang.translate('Playlists')}}" href="/likes" class="w-full flex gap gap-4   ajax-load ">
                                <span class="min-w-8  text-center relative my-2">
                                    <img src="/src/front_assets/svg/heart.svg" class="absolute top-2 left-0 right-0 mx-auto" width="18" />
                                    <img src="/src/front_assets/svg/heart-active.svg" class="active-icon absolute top-2 left-0 right-0 mx-auto"
                                        width="18" />
                                </span> <span class="py-2 block dark:text-gray-400 my-1 border-r w-full dark:border-gray-700 border-gray-50 ">{{lang.translate('Likes')}}</span>
                            </a>
                        </li>
