	<div id="app-cover" class="hidden">
        <div id="player">
            <div id="player-track" class="active">
                <div id="album-name" class="truncate"></div>
                <div id="track-name" class="truncate"></div>
                <div id="track-time" class="active">
                    <div id="current-time"></div>
                    <div id="track-length"></div>
                </div>
                <div id="s-area">
                    <div id="ins-time"></div>
                    <div id="s-hover"></div>
                    <div id="seek-bar"></div>
                </div>
            </div>
            <div id="player-content">
                <div id="album-art" class="active">
                    <img src="" class="active" id="track-poster">
                    <div id="buffer-box">Buffering ...</div>
                </div>
                <div id="player-controls">
                    <div class="control relative">
                        <div id="volume-mute" class="text-xs button" style="background-color:transparent; padding:3px; margin:0">
                            <img id="volume-mute-img" src="/src/front_assets/svg/player-volume.svg" width="24" />
                            <div id="volume-bar"  class="absolute lg:block hidden pt-1">
                                <input type="range" class="volume w-20" id="player-audio" min="0" max="1" step="0.1" value="1" data-css="0.5">
                            </div>
                        </div>
					</div>
					
                    <div class="control">
                        <div class="button" id="player-previous">
                            <img width="24" src="/src/front_assets/svg/player-start.svg" >
                            {# <img src="/src/front_assets/svg/" > #}
                        </div>
                    </div>
                    <div class="control">
                        <div class="button" id="player-pause-button">
                            <img width="24" class="play" src="/src/front_assets/svg/player-play.svg" >
                            <img width="24" class="pause " src="/src/front_assets/svg/player-pause.svg" >
                        </div>
                    </div>
                    <div class="control">
                        <div class="button" id="player-next">
                            <img width="24"  src="/src/front_assets/svg/player-end.svg" >
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>



