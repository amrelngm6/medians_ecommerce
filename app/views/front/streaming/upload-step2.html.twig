{% include 'views/front/' ~ template ~ '/includes/head.html.twig' %}

<div class=" w-full">

    <div class="w-full flex gap gap-2" id="main-container">
        
        <div  class="lg:fixed bg-white dark:bg-gray-900 h-screen">
            {% include 'views/front/' ~ template ~ '/includes/app_sidebar.html.twig' %}
        </div>

        <div class="w-full px-2 lg:px-0 relative overflow-hidden lg:ml-60" >
                    
            <header >
                {% include 'views/front/' ~ template ~ '/includes/app_header.html.twig' %}
            </header>

            
            <div  class=" text-primary  w-full  rounded-2xl bg-white dark:bg-gray-900  p-8">
                <div class="w-full flex gap-6">
                    <div class="slide__audio js-audio pt-4">
                        <audio class="slide__audio-player" controls data-id="{{item.media_id}}" data-wave-id="wave-{{item.media_id}}" data-wave-container="wave-container{{item.media_id}}">
                            <source src="{{item.main_file.path}}" type="audio/mpeg" />
                            {# <source src="/stream_audio?audio={{item.main_file.path}}" type="audio/mpeg" /> #}
                        </audio>
                        <div class="audio__controls">
                            <svg version="1.1" id="circle" width="50" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 100 100">
                                <path id="seekbar" fill="none" stroke-meterlimit="10" d="M50,2.9L50,2.9C76,2.9,97.1,24,97.1,50v0C97.1,76,76,97.1,50,97.1h0C24,97.1,2.9,76,2.9,50v0C2.9,24,24,2.9,50,2.9z"/>
                            </svg>
                            <svg xmlns="http://www.w3.org/2000/svg" class="equalizer" viewBox="0 0 100 100">
                                <g class="equalizer-group">
                                    <rect class="bar"></rect>
                                    <rect class="bar"></rect>
                                    <rect class="bar"></rect>
                                    <rect class="bar"></rect>
                                    <rect class="bar"></rect>
                                </g>
                            </svg>
                            <div class="audio__slider"></div>
                            <button class="play-pause"></button>
                        </div>
                    </div>
                    <div class="relative h-28 w-full"  > 
                        <div id="wave-{{item.media_id}}"  class="absolute w-full h-full top-0 right-0  opacity-50 bg-white z-50"> </div>
                        <img id="wave-container{{item.media_id}}" class="w-full left-0 top-0 bottom-0 my-auto absolute" src="/stream?thumbnail=100&image={{item.main_file.wave}}" />
                    </div>
                </div>
                <form action="/front_api/update" method="post" enctype="multipart/form-data" id="upload-step" class="ajax-form w-full">
                    <input type="hidden" name="type" value="MediaItem.update" />
                    <input type="hidden" name="params[media_id]" value="{{item.media_id}}" />
                    

                    
                    <div class=" text-primary"><h4 class="text-xl dark:text-gray-400">{{lang.translate('Basic info')}}</h4></div>
                    <hr class="opacity-30 my-6" />
                    <div class="grid-cols-2 grid gap-10">
                        <div class="text-primary w-full block">
                            <input placeholder="Item Title *" class=" dark:bg-gray-900 dark:border-gray-700 py-2 px-4 w-full rounded-2xl bg-gray-100 border focus:outline-none focus:border-orange-300  border-gray-200" />
                        </div>
                        <div class="text-primary w-full block relative">
                            <span class="w-6 absolute my-2 mx-4 left-[90%] right-[90%]"><img src="/src/front_assets/svg/down.svg" /></span>
                            <input placeholder="Genres" class="active-parent cursor-pointer py-2 px-4 w-full rounded-2xl dark:bg-gray-900 dark:border-gray-700 bg-gray-100 border focus:outline-none focus:border-orange-300  border-gray-200" />
                            <div class="show-active hidden rounded-2xl w-full top-10 absolute bg-white dark:bg-gray-900 p-4 ">
                                <a class="block" href="#!">1</a>
                                <a class="block" href="#!">1</a>
                            </div>
                            <span class="mt-2 text-xs rounded-full py-1 px-2 bg-gray-300 text-gray-800  gap-2 inline-block">    
                                <span class="flex gap-2">HipHop <img src="/src/front_assets/svg/close.svg" /></span> 
                            </span> 
                        </div>                        
                    </div>
                    
                    <div class="text-primary w-full block my-6">
                        <textarea rows="3" placeholder="Description *" class=" dark:bg-gray-900 dark:border-gray-700 py-2 px-4 w-full rounded-2xl bg-gray-100 border focus:outline-none focus:border-orange-300  border-gray-200" ></textarea>
                    </div>
                    
                    <button class=" dark:text-gray-400 float-right inline-block px-6 py-2 rounded-2xl border hover:border-orange-600 border-orange-300">{{lang.translate('Next')}}</button>
                    
                </form>
            </div>

        </div>
         
    </div>
</div>
    
<!-- Footer -->
{% include 'views/front/' ~ template ~ '/includes/footer.html.twig' %}

<script src="/src/front_assets/js/main.js"></script>

</body>

</html>