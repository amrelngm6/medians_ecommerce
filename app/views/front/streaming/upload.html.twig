<div class=" w-full">

    <div class="w-full flex gap gap-2" id="main-container">
        
        <div  class="lg:fixed bg-white dark:bg-gray-900 h-screen">
            {% include 'views/front/' ~ template ~ '/includes/app_sidebar.html.twig' %}
        </div>

        <div class="w-full px-2 lg:px-0 relative overflow-hidden lg:ml-60" >
                    
