                        <div class=" w-full  relative h-64 overflow-hidden rounded-2xl mb-4 border border-gray-200 dark:border-gray-600">
                            {% set a = station.findMediaByTime(station.station_id, "now"|date("H:i:s") ) %}
                            <div class=" w-full  gradient-top-overlay">
                                <img style="z-index:0" src="/stream?thumbnail=1000&image={{station.picture_name}}" class="w-full  shadow-xl absolute top-0 left-0 "/>
                            </div>
                            <div class=" w-full h-96 absolute bottom-0 left-0 gradient-top-overlay" style="z-index:0; "></div>
                            <div class="z-30 absolute bottom-10 left-20  z-10 w-2/3 text-gray-100 dark:text-gray-300">
                                <a class="lg:text-4xl text-lg text-white ajax-load" href="/station/{{station.station_id}}">{{station.name}}</a>

                                <div class=" flex gap-4 float-right mt-6">
                                    <a href="/station/{{station.station_id}}"  class="ajax-load dark:border-gray-600 hover:border-orange-300 hover:text-orange-300 border border-4 border-white rounded-full py-2 px-6">
                                        <span>{{lang.translate('Stream')}}</span>
                                    </a>
                                </div>

                                <div class="w-full flex gap-4 pt-6">
                                    <div class="flex gap-4 pt-6">
                                        <span class="text-sm text-gray-100">{{lang.translate('Likes')}} : {{station.likes|length}} </span>
                                        <span class="text-sm text-gray-100">{{lang.translate('Plays')}} : {{station.views|length}} </span>
                                        <span class="text-sm text-gray-100">{{lang.translate('Items')}} : {{station.items|length}} </span>
                                    </div>
                                </div>

                            </div>
                            {% if station.activeItem.station_media_id > 0 %}
                            <img src="/src/front_assets/svg/live.svg" class="absolute bottom-0 right-0 ml-20 w-20" />
                            {% endif  %}

                        </div>