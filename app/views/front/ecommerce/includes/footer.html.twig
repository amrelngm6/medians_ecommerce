  <!-- Customer Login Form -->
  <div class="aside aside_right overflow-hidden customer-forms" id="customerForms">
        <div class="aside-header d-flex align-items-center">
            <h3 class="text-uppercase fs-6 mb-0">{{lang.translate('Profile')}}  </h3>
            <button class="btn-close-lg js-close-aside btn-close-aside ms-auto"></button>
        </div><!-- /.aside-header -->
    <div class="customer-forms__wrapper d-flex position-relative">

        {% if app.customer_auth.customer_id %}
        <div class="py-2">

            <div class="flex gap-6 main-info">
                    <div class="img">
                        <img src="{{app.customer_auth.picture ?? '/uploads/img/profile.png'}}" alt="" class="w-20 h-20 main-img img-cover">
                    </div>
                    <div>
                        <h4 class="text-xl pt-4">{{app.customer_auth.name}}</h4>
                        <p>{{app.customer_auth.email}}</p>
                    </div>
                </div>
            <ul class="navigation__list list-unstyled position-relative mt-10">
                <li class="navigation__item py-2"><a href="/customer/dashboard" class="navigation__link">{{lang.translate('Account')}}</a></li>
                <li class="navigation__item py-2"><a href="/customer/orders" class="navigation__link">{{lang.translate('Orders')}}</a></li>
                <li class="navigation__item py-2"><a href="/cart" class="navigation__link">{{lang.translate('Cart')}}</a></li>
                <li class="navigation__item py-2"><a href="/wishlist" class="navigation__link">{{lang.translate('Wishlist')}}</a></li>
                <li class="navigation__item py-2 js-show-register js-show-login"><a href="/logout" class="navigation__link">{{lang.translate('logout')}}</a></li>
            </ul>
        </div>
        {% else  %}

        <div class="customer__login">

            <form action="/customer/login" method="POST" id="side-login-form" class="ajax-form aside-content">
            <div class="form-floating mb-3">
                <input name="params[email]" type="email" class="form-control form-control_gray" id="customerNameEmailInput" placeholder="name@example.com">
                <label for="customerNameEmailInput">{{lang.translate('Email address')}} *</label>
            </div>

            <div class="pb-3"></div>

            <div class="form-label-fixed mb-3">
                <label for="customerPasswordInput" class="form-label">{{lang.translate('Password')}} *</label>
                <input name="params[password]" id="customerPasswordInput" class="form-control form-control_gray" type="password" placeholder="********">
            </div>

            <div class="d-flex align-items-center mb-3 pb-2">
                <div class="form-check mb-0">
                <input name="remember" class="form-check-input form-check-input_fill" type="checkbox" value="" id="flexCheckDefault">
                <label class="form-check-label text-secondary" for="flexCheckDefault">{{lang.translate('Remember me')}}</label>
                </div>
                <a href="/customer/reset_password" class="btn-text ms-auto">{{lang.translate('Lost password')}}?</a>
            </div>

            <button class="btn btn-primary bg-dark w-100 text-uppercase js-show-login" type="submit">{{lang.translate('Log In')}}</button>

            <div class="customer-option mt-4 text-center">
                <span class="text-secondary">{{lang.translate('No account yet')}}?</span>
                <a href="/customer/signup" class="btn-text js-show-register">{{lang.translate('Create Account')}}</a>
            </div>
            </form>
        </div><!-- /.customer__login -->
        {% endif  %}

    </div><!-- /.customer-forms__wrapper -->
  </div><!-- /.aside aside_right -->


