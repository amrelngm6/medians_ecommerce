{% include 'views/front/' ~ template ~ '/includes/head.html.twig' %}
{% include 'views/front/' ~ template ~ '/includes/header.html.twig' %}
{% include 'views/front/' ~ template ~ '/blocks/breadcrumb.html.twig' %}


            <main>
            

                <section class="login-register  mx-auto" style="max-width: 600px">
                <h2 class="d-none"> {{lang.translate('Welcome Back')}}</h2>
                <ul class="nav nav-tabs mb-5" id="login_register" role="tablist">
                    <li class="nav-item" role="presentation">
                    <a class="nav-link nav-link_underscore active" id="login-tab" data-bs-toggle="tab" href="#tab-item-login" role="tab" aria-controls="tab-item-login" aria-selected="true"> {{lang.translate('login to continue')}} </a>
                    </li>
                </ul>
                <div class="tab-content pt-2" id="login_register_tab_content">
                    <div class="tab-pane fade active show" id="tab-item-login" role="tabpanel" aria-labelledby="login-tab">
                    <div class="login-form">
                        <form action="/customer/login" method="POST" id="login-form" class="ajax-form  d-block needs-validation" novalidate="">
                            <div class="form-floating mb-3">
                                <input name="params[email]"  type="email" class="form-control form-control_gray" id="customerNameEmailInput1" placeholder="Email address *" required="">
                                <label for="customerNameEmailInput1"> {{lang.translate('Email')}} *</label>
                            </div>
                    
                            <div class="pb-3"></div>
                    
                            <div class="form-floating mb-3">
                                <input name="params[password]"  type="password" class="form-control form-control_gray" id="customerPasswodInput" placeholder="Password *" required="">
                                <label for="customerPasswodInput"> {{lang.translate('Password')}} *</label>
                            </div>
                    
                            <div class="d-flex align-items-center mb-3 pb-2">
                                <div class="form-check mb-0">
                                <input name="remember" class="form-check-input form-check-input_fill" type="checkbox" value="" id="flexCheckDefault1">
                                <label class="form-check-label text-secondary" for="flexCheckDefault1">{{lang.translate('Remember me')}}</label>
                                </div>
                                <a href="/customer/reset_password" class="btn-text ms-auto">{{lang.translate('Forget Password')}} </a>
                            </div>
                    
                            <button class="btn btn-primary w-100 text-uppercase bg-red" type="submit">{{lang.translate('Log In')}}</button>
                    
                            <div class="customer-option mt-4 text-center">
                                <span class="text-secondary">{{lang.translate('No account yet')}}</span>
                                <a href="./signup" class="btn-text ">{{lang.translate('create new account')}} </a>
                            </div>
                        </form>
                    </div>
                    </div>
                </div>
                </section>


                <!--  End login  -->
            </main>
            

<!-- Footer -->
