{% include 'views/front/' ~ template ~ '/includes/head.html.twig' %}
{% include 'views/front/' ~ template ~ '/includes/header.html.twig' %}

<div class="profile-pg-1 pt-10">
	<main>
		<div class="mb-4 pb-4"></div>
		<section class="my-account container">
			<div class="row">
				<div class="col-lg-3">
        			<h2 class="page-title mt-10">{{lang.translate('Orders')}}</h2>

					<div class="w-full my-4 mb-md-0 d-flex align-items-center justify-content-md-center gap-3">
						<div class="service-promotion__icon">
							<svg width="52" height="52" viewbox="0 0 52 52" fill="none" xmlns="http://www.w3.org/2000/svg">
								<use href="#icon_shipping"></use>
							</svg>
						</div>
						<div class="w-full service-promotion__content-wrap">
							<h3 class="service-promotion__title h6 text-uppercase mb-1">{{orders.count()}}</h3>
							<p class="service-promotion__content text-secondary mb-0">{{lang.translate('Total orders')}}</p>
						</div>
                    </div>
					<div class="w-full my-4 mb-md-0 d-flex align-items-center justify-content-md-center gap-3">
                        <div class="service-promotion__icon">
							<svg width="52" height="52" viewbox="0 0 1024 1024" fill="#000000" xmlns="http://www.w3.org/2000/svg">
								<path d="M53.6 1023.2c-6.4 0-12.8-2.4-17.6-8-4.8-4.8-7.2-11.2-6.4-18.4L80 222.4c0.8-12.8 11.2-22.4 24-22.4h211.2v-3.2c0-52.8 20.8-101.6 57.6-139.2C410.4 21.6 459.2 0.8 512 0.8c108 0 196.8 88 196.8 196.8 0 0.8-0.8 1.6-0.8 2.4v0.8H920c12.8 0 23.2 9.6 24 22.4l49.6 768.8c0.8 2.4 0.8 4 0.8 6.4-0.8 13.6-11.2 24.8-24.8 24.8H53.6z m25.6-48H944l-46.4-726.4H708v57.6h0.8c12.8 8.8 20 21.6 20 36 0 24.8-20 44.8-44.8 44.8s-44.8-20-44.8-44.8c0-14.4 7.2-27.2 20-36h0.8v-57.6H363.2v57.6h0.8c12.8 8.8 20 21.6 20 36 0 24.8-20 44.8-44.8 44.8-24.8 0-44.8-20-44.8-44.8 0-14.4 7.2-27.2 20-36h0.8v-57.6H125.6l-46.4 726.4zM512 49.6c-81.6 0-148.8 66.4-148.8 148.8v3.2h298.4l-0.8-1.6v-1.6c0-82.4-67.2-148.8-148.8-148.8z" fill="" />
							</svg>
						</div>
						<div class="w-full service-promotion__content-wrap">
							<h3 class="service-promotion__title h6 text-uppercase mb-1">{{orders.where('status', 'new').count()}}</h3>
							<p class="service-promotion__content text-secondary mb-0">{{lang.translate('New orders')}}</p>
						</div>      
                    </div>
					<div class="w-full my-4 mb-md-0 d-flex align-items-center justify-content-md-center gap-3">
                        <div class="service-promotion__icon">
							<svg width="52" height="52" viewbox="0 0 1024 1024" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path fill="#000000" d="M280.768 753.728 691.456 167.04a32 32 0 1 1 52.416 36.672L314.24 817.472a32 32 0 0 1-45.44 7.296l-230.4-172.8a32 32 0 0 1 38.4-51.2l203.968 152.96zM736 448a32 32 0 1 1 0-64h192a32 32 0 1 1 0 64H736zM608 640a32 32 0 0 1 0-64h319.936a32 32 0 1 1 0 64H608zM480 832a32 32 0 1 1 0-64h447.936a32 32 0 1 1 0 64H480z"/>
							</svg>
						</div>
						<div class="w-full service-promotion__content-wrap">
							<h3 class="service-promotion__title h6 text-uppercase mb-1">{{orders.where('status', 'completed').count()}}</h3>
							<p class="service-promotion__content text-secondary mb-0">{{lang.translate('Completed orders')}}</p>
						</div>      
                    </div>
					<div class="w-full my-4 mb-md-0 d-flex align-items-center justify-content-md-center gap-3">
                        <div class="service-promotion__icon">
							<svg width="52" height="52" viewbox="0 0 1024 1024" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M704 288h-281.6l177.6-202.88a32 32 0 0 0-48.32-42.24l-224 256a30.08 30.08 0 0 0-2.24 3.84 32 32 0 0 0-2.88 4.16v1.92a32 32 0 0 0 0 5.12A32 32 0 0 0 320 320a32 32 0 0 0 0 4.8 32 32 0 0 0 0 5.12v1.92a32 32 0 0 0 2.88 4.16 30.08 30.08 0 0 0 2.24 3.84l224 256a32 32 0 1 0 48.32-42.24L422.4 352H704a224 224 0 0 1 224 224v128a224 224 0 0 1-224 224H320a232 232 0 0 1-28.16-1.6 32 32 0 0 0-35.84 27.84 32 32 0 0 0 27.84 35.52A295.04 295.04 0 0 0 320 992h384a288 288 0 0 0 288-288v-128a288 288 0 0 0-288-288zM103.04 760a32 32 0 0 0-62.08 16A289.92 289.92 0 0 0 140.16 928a32 32 0 0 0 40-49.92 225.6 225.6 0 0 1-77.12-118.08zM64 672a32 32 0 0 0 22.72-9.28 37.12 37.12 0 0 0 6.72-10.56A32 32 0 0 0 96 640a33.6 33.6 0 0 0-9.28-22.72 32 32 0 0 0-10.56-6.72 32 32 0 0 0-34.88 6.72A32 32 0 0 0 32 640a32 32 0 0 0 2.56 12.16 37.12 37.12 0 0 0 6.72 10.56A32 32 0 0 0 64 672z" fill="#231815" />
							</svg>
						</div>
						<div class="w-full service-promotion__content-wrap">
							<h3 class="service-promotion__title h6 text-uppercase mb-1">{{orders.where('status', 'cancelled').count()}}</h3>
							<p class="service-promotion__content text-secondary mb-0">{{lang.translate('Cancelled orders')}}</p>
						</div>
					</div>
				</div>
				<div class="col-lg-9">
					<div class="page-content my-account__orders-list">
						<table class="orders-table">
							<thead>
								<tr>
									<th>{{lang.translate('Order')}}</th>
									<th>{{lang.translate('Date')}}</th>
									<th>{{lang.translate('Status')}}</th>
									<th>{{lang.translate('Total')}}</th>
									<th>{{lang.translate('Actions')}}</th>
								</tr>
							</thead>
							<tbody>
								{% for order in orders %}
                            
								<tr>
									<td><a  href="/order/{{order.order_id}}"> #{{order.order_id}}</a></td>
									<td>{{order.date}}</td>
									<td>{{order.status}}</td>
									<td>{{order.total_amount}}</td>
									<td>
										<a  href="/order/{{order.order_id}}" class="btn btn-primary">{{lang.translate('VIEW')}}</a>
									</td>
								</tr>
								{% endfor  %}

							</tbody>
						</table>
					</div>
				</div>
			</div>
		</section>
	</main>

</div>
<!-- Footer -->
{% include 'views/front/' ~ template ~ '/includes/footer.html.twig' %}
